<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.hsingpeng.testextendbinder.Main3Activity">

    <EditText
        android:id="@+id/editTextTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSendToLinux"
        android:layout_alignEnd="@+id/buttonSendToLinux"
        android:layout_alignStart="@+id/buttonSendToLinux"
        android:ems="10"
        android:hint="times" />

    <Button
        android:id="@+id/buttonSendToLinux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSendToAndroid"
        android:layout_alignEnd="@+id/buttonSendToAndroid"
        android:layout_alignStart="@+id/buttonSendLinuxContentProvider"
        android:text="SEND INTENT TO LINUX APP" />

    <Button
        android:id="@+id/buttonSendToAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="SEND INTENT TO ANDROID APP" />

    <Button
        android:id="@+id/buttonSendLinuxContentProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSendToAndroid"
        android:layout_alignStart="@+id/buttonSendToAndroid"
        android:layout_below="@+id/buttonSendToAndroid"
        android:text="LINUX CONTERNTPROVIDER" />

    <Button
        android:id="@+id/buttonSendAndroidContentProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSendLinuxContentProvider"
        android:layout_alignStart="@+id/buttonSendLinuxContentProvider"
        android:layout_below="@+id/buttonSendLinuxContentProvider"
        android:text="ANDROID CONTERNTPROVIDER" />
</RelativeLayout>
